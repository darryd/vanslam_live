<div id="dot_matrix">
<div class="page_change" data-run="index" hidden></div>

	<canvas id="dotmatrix_canvas" width="847" height="85" data-message="<%= @title %>">
		<h1> <%= @title %> </h1>
	</canvas>
	<p> <small> Dot Matrix from <a href="http://strugnell.com/labs/canvas_dot_matrix_prototype"> strugnell.com </a> </small></p>
</div>

<iframe id="content_frame" width="100%" height="100%" frameborder="0" src="welcome/events"></iframe>


<script>
  window.onresize = function() {

    var dot_matrix = document.getElementById("dot_matrix");
    var iframe = document.getElementById("content_frame");
    var rect = dot_matrix.getBoundingClientRect();

    var height = window.innerHeight - rect.bottom;

    iframe.height = height - 32;
  };

</script>
