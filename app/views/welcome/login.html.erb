<%= render :partial => 'welcome/logout' %>

<h2>
<%= flash['message'] %>
</h2>

<% if @is_logged_in == false %>
  <h1> Login </h1>

  <%= form_tag("/welcome/do_log_in/") do |f| %>


    <table>
      <tr>
	<td>
	  <%= label_tag "User Name:" %>
	</td>

	<td>
	  <%= text_field_tag(:user_name) %> </br>
	</td>

      </tr>
      <tr>
	<td>
	  <%= label_tag "Password:" %>
	</td>
	<td>
	  <%= password_field_tag "passwd" %> </br>
	</td>
      </tr>
    </table>

    <%= submit_tag "Login" %>

  <% end %>
<% end %>
